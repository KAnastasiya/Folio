doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Folio
    link(rel="icon", type="image/png", href="img/favicon.ico")
    link(rel="stylesheet", href="css/styles.min.css")
  body
    div.page-bg
      // Page header
      include includes/header
      div.flex-row.wrap
        div.container
          main.flex-row.no-wrap
            section.flex-col.no-wrap.section
              header.section__header
                h3 Portfolio
                nav.portfolio-filters-container
                  ul.portfolio-filters
                    li(data-name="all").portfolio-filters__item
                      a(href="#").portfolio-filters__link All
                    li(data-name="wedding").portfolio-filters__item
                      a(href="#").portfolio-filters__link Wedding
                    li(data-name="landscape").portfolio-filters__item
                      a(href="#").portfolio-filters__link Landscape
                    li(data-name="portrait").portfolio-filters__item
                      a(href="#").portfolio-filters__link Portrait
                    li(data-name="events").portfolio-filters__item
                      a(href="#").portfolio-filters__link Events
              div.section__content.portfolio-content
                div.card.portfolio-card
                  img(src="img/portfolio/img_1.png", alt="Image1").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_2.png", alt="Image2").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_3.png", alt="Image3").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_4.png", alt="Image4").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_5.png", alt="Image5").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_6.png", alt="Image6").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_7.png", alt="Image7").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_8.png", alt="Image8").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_9.png", alt="Image9").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_10.png", alt="Image10").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_11.png", alt="Image11").portfolio-card__img
                div.card.portfolio-card
                  img(src="img/portfolio/img_12.png", alt="Image12").portfolio-card__img
            // Slideshow
            include includes/slider
        // Page footer
        include includes/footer

    script(src="js/common.min.js")
    script(src="js/portfolio.min.js")
